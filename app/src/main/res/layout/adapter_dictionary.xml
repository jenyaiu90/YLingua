<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tool="http://schemas.android.com/tools">
	
	<CheckBox
		android:id="@+id/learned1CB"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"/>
	
	<TextView
		android:id="@+id/firstTV"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toEndOf="@id/learned1CB"
		app:layout_constraintEnd_toStartOf="@id/dictionaryGL"
		android:layout_margin="8dp"
		tool:text="First"
		android:textColor="@android:color/black"/>
	
	<androidx.constraintlayout.widget.Guideline
		android:id="@+id/dictionaryGL"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		app:layout_constraintGuide_percent="0.5"/>
	
	<TextView
		android:id="@+id/secondTV"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toEndOf="@id/dictionaryGL"
		app:layout_constraintEnd_toStartOf="@id/learned2CB"
		android:layout_margin="8dp"
		tool:text="Second"
		android:textAlignment="textEnd"
		android:textColor="@android:color/black"/>
	
	<CheckBox
		android:id="@+id/learned2CB"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>